@model CheckBoxList.Models.ProductModel
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
    <table>
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            if (i % 3 == 0)
            {
                @:<tr></tr>
            }
            <td style="width:300px; margin-right:20px;">
                @Html.CheckBoxFor(model => model.Products[i].IsChecked)
                <label>@Model.Products[i].ProductName</label>
                @Html.HiddenFor(model => model.Products[i].ProductID)
                @Html.HiddenFor(model => model.Products[i].ProductName)
            </td>
        }

    </table>
       
    <button type="submit">Check-out</button>
 }



